@model (List<KhumaloCraft.Models.TransactionTBL> productDetails, List<KhumaloCraft.Models.TransactionTBL> UserDetails )

@{
    ViewData["Title"] = "Order";
    var userID = ViewData["userID"];
}  
<body>
    <div class="page-section">
        <h1 class="order-header">Order Details</h1>

        @if (Convert.ToInt32(userID) == 0)
        {
            <p>Please <a href="/Home/Privacy">login</a> to see your Orders </p>           
            
        }
        else if (Convert.ToInt32(userID) == 1)
        {
            <p>Welcome Admin</p>
            <p>Please see below all orders made</p>
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>User Surname</th>
                            <th>Product Name</th>
                            <th>Product Category</th>
                            <th>Product Price</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var user in Model.UserDetails)
                        {
                            <tr>
                                <td>@user.orderID</td>
                                <td>@user.userID</td>
                                <td>@user.userName</td>
                                <td>@user.surname</td>
                                <td>@user.productName </td>
                                <td>@user.productCategory</td>
                                <td>R@($"{user.productPrice:F2}")</td>

                            </tr>
                        }
                    </tbody>

                </table>


            </div>

            


        }
        else
        {
            <h3 class="title"> User Details</h3>
            <div class="table-user-container">
                <table class="table-user">
                    <tbody class="table-user-body">
                        @foreach (var user in Model.UserDetails)
                        {
                            <tr>
                                <th>ID </th>
                                <td>@user.userID</td>
                            </tr>
                            <tr>
                                <th>Name </th>
                                <td>@user.userName</td>
                            </tr>
                            <tr>
                                <th>Surname</th>
                                <td>@user.surname</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@user.email</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <h3 class="title"> Product Details</h3>
            <table class="table-product">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var products in Model.productDetails)
                    {
                        <tr>
                            <td>@products.productName </td>
                            <td>@products.productCategory</td>
                            <td>R@($"{products.productPrice:F2}")</td>
                     

                        </tr>
                    }
                </tbody>
            </table>

        }
       
    </div>

</body>

    
